    "@commitlint/config-conventional": "^17.6.3",
    "@jscutlery/semver": "^3.0.0",
    "@nx/jest": "^16.1.4",
    "@nx/js": "^16.1.4",
    "@nx/linter": "^16.1.4",
    "@nx/workspace": "16.1.4",
    "@types/jest": "^29.5.1",
    "@types/node": "^16.18.29",
